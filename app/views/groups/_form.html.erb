<%= form_with(model: group) do |form| %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, value: @group.name %>
  </div>

  <div>
    <%= form.label :icon, style: "display: block" %>
    <%= form.select :icon, ["✈️", "🎮", "📚", "🏥", "🏈", "🎬", "🏠", "🐶", "🍻", "🍔", "🚗", "🖥"], value: @group.icon %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
