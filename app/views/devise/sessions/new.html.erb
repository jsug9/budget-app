<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form_field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form_field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember_box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "green_button" %>
  </div>
<% end %>

<div class="else_links">
  <%= render "devise/shared/links" %>
</div>
